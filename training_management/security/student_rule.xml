<!-- Task 3 â€“ Security 
Create an ACL so that only users in group training_manager can delete student records.
Add a Record Rule so each user can see only their assigned students. -->

<odoo>
    <data noupdate="0">
        <!-- Record Rule: Each user sees only their assigned students -->

        <record id="group_training_manager" model="res.groups">
                <field name="name">Training Manager</field>
                <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <record id="student_user_rule" model="ir.rule">
            <field name="name">Student: Only Own Records</field>
            <field name="model_id" ref="model_training_student"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>




    
  