<odoo>
    <record id="email_template_edi_purchase_idgfv" model="mail.template">
            <field name="name">Purchase:action done</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">Purchasing Order {{ object.partner_id}}</field>
            <field name="email_from">{{user.email}}</field>
            <field name="partner_to">{{ object.partner_id.email }}</field>
            <field name="body_html" type="html">
                <p>
                    hello,
                    <strong>Customer Name:<t t-out="object.name"/></strong><br></br>
                    <strong>Conformation Date:<t t-out="object.date_approve"/></strong><br></br>
                    <strong>Total Amount:<t t-out="object.amount_total"/> </strong><br></br>
                thank you.
                </p>
            </field>
    </record>        
</odoo>
