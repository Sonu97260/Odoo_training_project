<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <record id="action_done_mail_id" model="mail.template">
            <field name="name">action done send the email</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Summary at the sale {{ object.partner_id.name}}</field>
            <field name="email_from">{{user.email}}</field>
            <field name="partner_to">{{ object.partner_id.email }}</field>
            <field name="body_html" type="html">
                <p>
                hello,
                        <strong>
                        Sale Order Name: <t t-out="object.name"/>
                        Total Amount: <t t-out="object.amount_total"/>
                        Payment Terms: <t t-out="object.payment_term_id"/>
                        </strong>
               Thank you,
                </p>

            </field>
         </record>
   </data>
</odoo>