<odoo>
    <record model="ir.ui.view" id="sale_order_view_form_customm">
		<field name="name">sale.order.view.form.customm</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
             <field name="attachment_ids"
                widget="many2many_binary"
                string="Attachment" />
                <button name="action_preview_attachment"
                    type="object"
                    string="Preview"
                    icon="fa-file"/>
            </xpath>
            
        </field>
    </record>
