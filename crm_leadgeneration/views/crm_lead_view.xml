<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
                <field name="name">crm.lead.form</field>
                <field name="model">crm.lead</field>
                <field name="inherit_id" ref="crm.crm_lead_view_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='partner_id']" position="before">
                        <group>
                            <group>
                                <field name="lead_num"
                                invisible= "[('lead_num', '=', False)]}"
                                readonly="1"/>

                            </group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                        </group>

                    </xpath>
                </field>
    </record> 
    <record id="crm_case_tree_view_opporuiuhgh" model="ir.ui.view">
                <field name="name">crm.lead.list.opportunity</field>
                <field name="model">crm.lead</field>
                <field name="priority">1</field>
                <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
                <field name="arch" type="xml">   
                    <!-- Set custom JS class for the list view -->
                    <xpath expr="//list" position="attributes">
                        <attribute name="js_class">crm_lead_list_context</attribute>
                    </xpath>    

                    <xpath expr="//list" position="inside">
                        <field name="show_button" column_invisible="1"/>
                    </xpath>

                    <xpath expr="//list/header/button[@name='%(crm.action_lead_mass_mail)d']" position="after">
                        <button type="button"
                        class="btn btn-primary"
                        style="margin-left: 8px;"
                        t-if="state.showTransferButton"
                        t-on-click="onTransferLeadClick">
                        Transfer Lead
                        </button>    
                    </xpath>
                    <xpath expr="//list" position="inside">
                            <field name="show_button" invisible="1"/>
                    </xpath>
                </field>  
        </record> 
</odoo> 
    