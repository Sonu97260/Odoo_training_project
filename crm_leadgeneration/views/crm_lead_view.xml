<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_id" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='crm_iap_mine_settings']" position="after">
                    <setting string="lead number and tranfer">
                        <field name="lead_num" />
                         <p>Lead No And Lead Transfer with Popup</p><br></br>
                            <div class="mt8" invisible="lead_num != True">
                                <strong> Prefix:  <field name="prefix"  placeholder="LEAD" invisible="lead_num != True"/></strong><br></br>
                                <strong> Start number  :<field name="start_num"  placeholder="00001" invisible="lead_num == False"/></strong>
                            </div>
                    </setting>
                    
            </xpath>
        </field>
    </record>

    <record id="crm_lead_view_form" model="ir.ui.view">
                <field name="name">crm.lead.form</field>
                <field name="model">crm.lead</field>
                <field name="inherit_id" ref="crm.crm_lead_view_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='partner_id']" position="before">
                        <group>
                            <group>
                                <field name="lead_num" readonly="1"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                        </group>
                    </xpath>
                </field>
    </record> 
    <record id="crm_case_tree_view_oppor_id" model="ir.ui.view">
            <field name="name">crm.lead.list.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="priority">1</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//list/header/button[@name='%(crm.action_lead_mass_mail)d']" position="after">
                    <button name="action_open_transfer_wizard"
                    type="object" 
                    string="Transfer Lead"/>
                </xpath>
            </field>
    </record>
