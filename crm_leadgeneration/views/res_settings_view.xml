<odoo>
        <record id="res_config_settings_view_formdd" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='crm_iap_mine_settings']" position="after">
                <h2>Lead Transfer &amp; Numbering</h2>
                
                <!-- Transfer Button Setting -->
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="lead_transfer_button_setting">
                        <div class="o_setting_left_pane">
                            <field name="show_lead_transfer_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_lead_transfer_button"/>
                            <div class="text-muted">
                                Display the Transfer Lead button in the leads list view.
                                Uncheck to hide the button from all users.
                            </div>
                        </div>
                    </div>
                    
                    <!-- Lead Numbering Setting -->
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="lead_num_enabled"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="lead_num_enabled"/>
                            <div class="text-muted">
                                Automatically generate sequential numbers for new leads
                            </div>
                            <div class="content-group" attrs="{'invisible': [('lead_num_enabled', '=', False)]}">
                                <div class="row mt16">
                                    <label for="lead_num_prefix" class="col-3 col-lg-3 o_light_label"/>
                                    <field name="lead_num_prefix" placeholder="LEAD"/>
                                </div>
                                <div class="row mt16">
                                    <label for="lead_num_start" class="col-3 col-lg-3 o_light_label"/>
                                    <field name="lead_num_start"/>
                                </div>
                                <div class="row mt16">
                                    <label for="lead_num_digit_length" class="col-3 col-lg-3 o_light_label"/>
                                    <field name="lead_num_digit_length"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <!-- <setting string="lead number and tranfer" help="  Lead No &amp; Lead transfer with Popup">
                        <field name="lead_num"/>
                            <div class="mt8" invisible="not lead_num">
                               <strong> Prefix:  <field name="prefix"  placeholder="LEAD" /></strong><br></br>
                               <strong> Start number  :<field name="start_num"  placeholder="00001"/></strong>
                            </div>
                    </setting> -->
            </xpath>
        </field>
    </record>
</odoo>