<odoo>
    <data>
     <record id="action_job_dashboard" model="ir.actions.client">
                <field name="name">Job Dashboard</field>
                <field name="tag">job_dashboard_tag</field>
                <field name="target">current</field>
        </record>
      
        <menuitem id="job_portal_menu_root" 
                  name="Job Portal" 
                  sequence="10" 
                  web_icon="job_portal,static/description/icon.png"/>


        <menuitem id="menu_job_position" 
                  name="Job Positions" 
                  parent="job_portal_menu_root" 
                  action="job_position_actions"/>

        <menuitem id="menu_job_application" 
                  name="Job Applications" 
                  parent="job_portal_menu_root" 
                  action="job_application_actions"/>

        <menuitem id="menu_dashboard" 
                name="Dashboard" 
                parent="job_portal_menu_root"
                action="action_job_dashboard"/>          
    </data>
</odoo>

