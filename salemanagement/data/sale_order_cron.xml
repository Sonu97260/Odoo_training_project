<!-- Create a scheduled action to automatically change the sale order state from confirmed to approved after 3 days. -->
<odoo>
    <data>
    <record id="cron_approve_quotation" model="ir.cron">
        <field name="name">Approve Quotation Automatically</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model.cron_approve_quotation()</field>
        <field name="user_id" ref="base.user_admin"/>
        <field name="interval_number">3</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>        
      </record>
    </data>
</odoo>