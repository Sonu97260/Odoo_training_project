<?xml version="1.0" encoding="UTF-8"?>
<odoo>

 
<record id="email_unpaid_student_id" model="mail.template">
        <field name="name">Unpaid fees reminder </field>
        <field name="model_id" ref="StudentManagement.model_rest_student" />
        <field name="email_from">{{ (user.email_formatted) }}</field>
        <field name="subject">send mail unpaid fees students</field>
        <field name="partner_to">${object.email|safe}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
        <div style="margin: 0px; padding: 0px; font-size: 13px;">
            <div>
                Dear student,<br/><br/>
                <p>This is a gentle reminder that your fees are still unpaid.</p>
                <p>Please pay at the earliest.</p>
                <p>Thank you,</p>
                <p>Your School</p>
                <br/>Best Regards,<br/><br/>
            </div>   
        </div>
        </field>
    </record>
</odoo>

