<odoo>
    <template id="student_login_template" name="Student login page">
        <t t-call="website.layout">
            <h2>
                Student Login Page
            </h2>
            <form action="/student/login/submit  " method="post">
             <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="form-group mb-2">
                        <label>Email: <span class="text-danger">*</span></label>
                        <input type="email" name="email" required="1" class="form-control"
                               t-att-value="form_data.get('email', '') if form_data else ''"/>
                </div>
                <div class="form-group mb-3">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" required="required"/>
                </div>
                
            </form>
        </t>
    </template>

    <!-- Student profile page -->
    <template id="student_profile_portal" name="My Portal">
        <t t-call="website.layout">
           <div class="container mt-4">
           <h2>Student Profile</h2>
            welcome
                    <p><strong>Name :</strong><t t-esc="student.name"/></p>
                    <p><strong>Email :</strong><t t-esc="student.email"/></p>
                    <p><strong>Gender :</strong><t t-esc="student.gender"/></p>
                    <p><strong>phone :</strong><t t-esc="student.phone"/></p>
            </div>        
        </t>
    </template>
</odoo>