<odoo>
    <record id="email_student_addmission_id" model="mail.template">
        <field name="name">student addmission confirmation </field>
        <field name="model_id" ref="StudentManagement.model_rest_student" />
        <field name="email_from">{{ (user.email_formatted) }}</field>
        <field name="subject">student addmission </field>
        <field name="partner_to">${object.email|safe}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
        <div style="margin: 0px; padding: 0px; font-size: 13px;">
            <div>
                Dear student,<br/><br/>
                 <p>Congratulations! Your admission has been successfully confirmed on
                    <strong>${format_date(object.admission_date)}</strong>.</p>
                    <p>We are delighted to welcome you to our institution. Please keep this email for your records.</p>
                <p>Best regards,</p><br/>
            </div>   
        </div>
        </field>
    </record>
</odoo>