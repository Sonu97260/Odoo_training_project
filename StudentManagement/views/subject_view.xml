	<odoo>
		<record id="subject_list_view" model="ir.ui.view">
			<field name="name">subject.list.view</field>
			<field name="model">school.subject</field>
			<field name="arch" type="xml">
				<list string="Subject Detail">
					<field name="name"/>
				</list>
			</field>
		</record>
		<record id="subject_form_view" model="ir.ui.view">
			<field name="name">subject.form.view</field>
			<field name="model">school.subject</field>
			<field name="arch" type="xml">
				<form string="Subject Detail">
					<sheet>
						<group>
							<field name="name"/>
						</group>
					</sheet>	
				</form>
			</field>
		</record>

		<record id="subject_action_window" model="ir.actions.act_window">
			<field name="name">Subjects</field>
			<field name="res_model">school.subject</field>
			<field name="view_mode">list,form</field>
		</record>
	</odoo>