            <field name="arch" type="xml">
                <calendar mode="month" date_start="date_request" color="name" event_open_popup="true">
                    <field name="user_id"/>
                    <field name="name"/>
                    <field name="student_id"/>
                </calendar>
            </field>
        </record> -->
        
        <record id="teacher_action_window" model="ir.actions.act_window">
            <field name="name">Tearchar</field>
            <field name="res_model">teacher.teacher</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>    
</odoo>