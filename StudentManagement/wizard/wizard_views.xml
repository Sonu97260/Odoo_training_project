<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="send_student_email_form" model="ir.ui.view">
            <field name="name">send student email form</field>
            <field name="model">send.student.email</field>
            <field name="arch" type="xml">
               <form>
                <group>
                    <group>
                        <field name="email_from"/>
                        <field name="email_to"/>
                        <field name="email_sub"/>
                        <field name="email_body"/>
                    </group>
                </group>
               </form>
            </field>
        </record>
        <record id="action_send_student" model="ir.actions.act_window">
            <field name="name">Send Emails</field>
            <field name="res_model">send.student.email</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>
