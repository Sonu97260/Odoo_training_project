<?xml version="1.0" encoding="UTF-8"?>
        <templates id="template" xml:space="preserve">
            <t t-name="owl.StudentDashboard" owl="1">
                <div class="p-4 bg-light">
                    <h2 class="mb-3" align="center">Student Dashboard</h2>
                    <div class="alert alert-info"> 
                        <div class="text-3xl text-primary cursor-pointer" t-on-click="openStudents" align="center">
                            Total Students: <strong><t t-esc="state.total"/></strong>
                        </div>
                    </div>
                    <div class="alert alert-success" align="center">
                        Total Teachers: <strong><t t-esc="state.total_teachers"/></strong>
                    </div>
                   
                    <div class="alert alert-info"> 
                        <div class="text-3xl text-primary cursor-pointer" align="center">
                            Total Subjects: <strong><t t-esc="state.total_subject"/></strong>
                        </div>
                    </div>

                     <div class="card mt-4 shadow-sm p-3">
                        <h4 class="text-center mb-3">Average Marks by Subject</h4>
                        <div style="height:300px;">
                            <ResponsiveContainer width="100%" height="100%">
                                <BarChart data="state.chartData" margin="{top: 20, right: 30, left: 20, bottom: 5}">
                                    <CartesianGrid strokeDasharray="3 3"/>
                                    <XAxis dataKey="subject"/>
                                    <YAxis domain="[0, 100]"/>
                                    <Tooltip/>
                                    <Bar dataKey="average_marks" barSize="40"/>
                                </BarChart>
                            </ResponsiveContainer>
                        </div>  
                        <div class="card mt-4 p-3 shadow-sm">
                            <h4 class="text-center mb-3">Active Students</h4>
                            <t t-component="studentList"/>
                        </div>
                    </div>
                </div>
            </t>
    </templates> 


