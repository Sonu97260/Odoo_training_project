<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="owl.StudentDashboard" owl="1">
        <div class="container-fluid mt-3" style="overflow-y: auto; height: 100vh;">
            <h1 class="mb-5" align="center" style="color: blue;">STUDENT DASHBOARD</h1>

            <div class="mb-4">
                <div class="input-group w-50 mx-auto">
                    <input type="text" class="form-control" placeholder="Search"
                        t-model="state.searchView" t-on-input="onSearch"/>
                    <!-- <button class="btn btn-primary" type="button" >Clear</button> -->
                </div>
            </div>
            <div class="d-flex justify-content-around flex-wrap gap-3 mt-4">
                <div class="dashboard-box bg-primary text-white text-center shadow-sm p-3 flex-fill" 
                align="center" style="width: 100px; height: 100px; font-size: 20px;">
                    Total Students: <strong><t t-esc="state.total"/></strong>
                </div>
                
                <div class="dashboard-box bg-primary text-white text-center shadow-sm p-3 flex-fill" 
                align="center" style="width: 100px; height: 100px; font-size: 20px;">
                    Total Teachers: <strong><t t-esc="state.total_teachers"/></strong>
                </div>
                <div class="dashboard-box bg-primary text-white text-center shadow-sm p-3 flex-fill" 
                align="center" style="width: 100px; height: 100px; font-size: 20px;">
                    Total Subjects: <strong><t t-esc="state.total_subject"/></strong>
                </div>
            </div>
            <div class="card mt-4 p-3 shadow-sm">
                <h4 class="text-center mb-3">Confirmed Students</h4>
                <div style="overflow-y: auto; max-height: 250px;">
                    <table class="table table-bordered table-striped">
                        <thead class="table-success sticky-top">
                            <tr>
                                <th>Student Name</th>
                                <th>Email</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="state.students" t-as="stu" t-key="stu.id">
                                <tr>
                                    <td><t t-esc="stu.name"/></td>
                                    <td><t t-esc="stu.email"/></td>
                                    <td><t t-esc="stu.age"/></td>
                                    <td><t t-esc="stu.gender"/></td>
                                    <td>
                                        <span class="badge bg-success">
                                            <t t-esc="stu.state"/>
                                        </span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Canceled Students Table -->
            <div class="card mt-4 p-3 shadow-sm">
                <h4 class="text-center mb-3" style="color: black;">Cancel Students</h4>
                <div style="overflow-y: auto; max-height: 250px;">
                    <table class="table table-bordered table-striped">
                        <thead class="table-success sticky-top">
                            <tr>
                                <th>Student Name</th>
                                <th>Email</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="state.student_cancel" t-as="stud" t-key="stud.id">
                                <tr>
                                    <td><t t-esc="stud.name"/></td>
                                    <td><t t-esc="stud.email"/></td>
                                    <td><t t-esc="stud.age"/></td>
                                    <td><t t-esc="stud.gender"/></td>
                                    <td>
                                        <span class="badge bg-danger">
                                            <t t-esc="stud.state"/>
                                        </span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</templates>