<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_inventory_aging_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Age Report</field>
        <field name="res_model">inventory.aging.wizard</field>
        <field name="view_mode">form,list</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_inventory_age_report"
        name="Inventory Age"
        parent="stock.menu_warehouse_report"
        action="action_inventory_aging_wizard"
        sequence="5"/>

     <record id="view_inventory_aging_wizard_form" model="ir.ui.view">
        <field name="name">inventory.aging.wizard.form</field>
        <field name="model">inventory.aging.wizard</field>
        <field name="arch" type="xml">

            <form string="Inventory Age">
                <group>
                    <field name="report_based_on"/>

                    <field name="warehouse_ids" widget="many2many_tags"
                        invisible="report_based_on!='warehouse'"/>
                    <field name="location_ids" widget="many2many_tags"
                        invisible="report_based_on!='location'"/>
                    <field name="include_all_products"/>
                </group>
            <sheet>
                <group invisible="include_all_products">
                     <field name="line_ids" >
                            <list editable="bottom" create="false" delete="false" decoration-bf="1">

                                        <field name="product_id" string="Product"/>
                                        <field name="default_code" string="Internal Reference"/>
                                        <field name="name" string="Name"/>
                                        <field name="list_price" string="Sale Price" widget="monetary" sum="Total Value"/>
                                        <field name="qty_available" string="Quantity On Hand" sum="Total On Hand"/>
                                        <field name="virtual_available" string="Forecast Quantity" sum="Total Forecast"/>
                                        <field name="total_qty" string="Total Quantity" sum="Total Quantity"/>
                                        <field name="barcode" string="Barcode"/>
                                        <field name="overall_qty" string="Overall Quantity" sum="Overall Quantity"/>
                                        <field name="oldest_qty" string="Oldest Quantity" sum="Oldest Quantity"/>
                                        <field name="percent_value" string="% in Total Value" sum="% of Total Value"/>
                                        <field name="value_dollar" string="Value INR"
                                            widget="monetary" sum="Total Value"/>
                                       

                                        <field name="average_cost" string="Average Cost" sum="Average Cost"
                                            widget="monetary"/>
                                        <field name="average_sale_price" string="Average Sale Price" sum="Average Sale Price"/>

                                        <field name="current_cost" string="Current Cost"
                                            widget="monetary" sum="Current Cost"/>
                                        <field name="current_sale_price" string="Current Sale Price" sum="Current Sale Price"/>
                            </list>
                    </field>
                </group>    
            </sheet>

                    <footer>
                        <button string="Download XLSX Report" type="object" name="action_generate_report" class="btn-primary"/>
                        <!-- <button string="Print PDF" type="object" name="action_print_pdf" class="btn-secondary"/> -->
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer> 
            </form>
        </field>
    </record>

</odoo>